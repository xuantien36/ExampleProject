<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C03869"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_avatar"
       android:layout_margin="10dp"
        android:src="@drawable/ic_group_587"
        android:layout_alignParentLeft="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
      android:id="@+id/name_baby_injected"
        android:layout_below="@id/im_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/svn_pokys"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/statistical"
        android:textColor="@color/color_statistical"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edittext">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/tv_statistical"
            android:textColor="#C03869"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="62dp"
        android:src="@drawable/ic_mask_group_15" />

    <ExpandableListView
        android:layout_below="@id/tv_2"
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginBottom="70dp"
        android:transitionGroup="false"
        android:groupIndicator="@null"
        android:transcriptMode="alwaysScroll"/>

</RelativeLayout>