<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/custom_dialog_reset"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:textColor="#FCF8F8"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/tv_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:textSize="15sp"
            android:padding="7dp"
           android:textColor="#F7F2F2"
            android:text="@string/tv_dicription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_no"
                android:textColor="#F5F2F2"
                android:background="@null"
                android:layout_weight="1"
                android:text="Không"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bnt_agree"
                android:textColor="#F5F2F2"
                android:background="@null"
                android:layout_weight="1"
                android:text="Đồng Ý"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>