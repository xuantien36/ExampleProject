<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_8"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ForgotActivity">
    <ImageView
        android:id="@+id/back_forgot"
       android:layout_margin="10dp"
        android:src="@drawable/ic_group_131"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/custom_layout_forgot"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_custom_register"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_forgot" />
        <Button
            android:layout_margin="20dp"
            android:layout_weight="0.1"
            android:id="@+id/btn_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_register"
            android:text="Tiếp Tục"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>